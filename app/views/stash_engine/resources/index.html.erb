<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Publisher</th>
      <th>Publication Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= title(resource) %></td>
        <td><%= publisher(resource) %></td>
        <td><%= publication_year(resource) %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-pencil"></i> Edit'.html_safe, edit_resource_path(resource.id), class: "btn" %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, '#', class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New Dataset", stash_engine.new_resource_path %><p id="notice"><%= notice %></p>
